				{
					"name": "Sign In",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData && jsonData.payload && jsonData.payload.token) {",
									"    // Strip 'Bearer ' if it exists in the token before setting",
									"    let token = jsonData.payload.token.replace(/^Bearer\\s+/, '');",
									"    pm.collectionVariables.set(\"authToken\", token); ",
									"    pm.collectionVariables.set(\"refreshToken\", jsonData.payload.refreshToken);",
									"    pm.collectionVariables.set(\"userId\", jsonData.payload.user.id);",
									"    console.log(\"Auth Token (Bearer removed) and Refresh Token set.\");",
									"} else {",
									"    console.log(\"Token not found in response.\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
